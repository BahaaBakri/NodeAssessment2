<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<%= path %>" method="POST">
            <input type="hidden" name="id" value="<%= data._id%>">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= data.title%>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= data.imageUrl%>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= data.price%>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%= data.description%></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%= csurfTocken %>">
            <button class="btn" type="submit"><%= pageTitle%></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>